{
  "name": "untitled1",
  "version": "0.1.0",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.2",
    "exceljs": "^4.4.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "react-scripts test",
    "electron": "electron .",
    "start-elec": "concurrently -k \"npm start\" \"npm run electron-dev\"",
    "electron-dev": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build-electro-s": "mkdir build/electron && robocopy electron build/electron /S",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "package": "electron-builder build --win -c.extraMetadata.main=build/electron/main.js --publish never",
    "prepare": "husky install",
    "commit": "cz"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/node": "^22.19.0",
    "@vitejs/plugin-react": "^5.1.0",
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "typescript": "^5.9.3",
    "vite": "^7.1.12"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "build": {
    "appId": "com.prism.calculation",
    "productName": "Расчёт призменного элемента",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/main.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*.node"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
